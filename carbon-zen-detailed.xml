<theme>
	<formatVersion>4</formatVersion>

	<view name="detailed">

		<!-- Background -->
		<image name="background" extra="true">
			<path>./art/backgrounds/dark-blue.jpg</path>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image>

		<!-- Layout lines -->
		<image name="layout_vert_1, layout_horiz_1" extra="true">
			<!-- Common colors, etc for all lines -->
			<path>./art/layout/bg_color.png</path>
 		    <origin>0.0 0.0</origin>
			<color>FF00EECC</color>
		</image>
		<image name="layout_vert_1" extra="true">
 		    <pos>0.37 0.0</pos>
 		    <size>0.005 0.935</size>
 		</image>
		<image name="layout_horiz_1" extra="true">
			<pos>0.0 0.8</pos>
			<size>0.37 0.005</size>
		</image>

		<!-- System Logos -->
		<image name="logo">
			<pos>0.15 0.87</pos>
			<maxSize>0.3 0.09</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<image name="logo2" extra="true">
			<!-- Hidden -->
			<pos>1 1</pos>
		</image>

		<!-- Game List -->
		<textlist name="gamelist">
			<selectedColor>80b3ff</selectedColor>
			<primaryColor>c6d9ec</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<pos>0.021 0.02</pos>
			<size>0.34 0.77</size>
			<alignment>left</alignment>
			<horizontalMargin>0.00</horizontalMargin>
			<fontSize>0.025</fontSize>
			<scrollSound>./art/sounds/click.wav</scrollSound>
		</textlist>

		<!-- Metadata -->
		<text name="md_genre, md_players, md_lbl_players">
			<color>c6d9ec</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<fontSize>0.028</fontSize>
		</text>
		<text name="md_genre">
			<pos>0.55 0.18</pos>
			<size>0 0.033</size>
		</text>
		<text name="md_lbl_players">
			<pos>0.655 0.18</pos>
			<size>0 0.033</size>
		</text>
		<text name="md_players">
			<pos>0.72 0.18</pos>
			<size>0 0.033</size>
		</text>

		<!-- Image -->
		<image name="md_image">
			<pos>0.7 0.43</pos>
			<maxSize>0.53 0.4</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<!-- Icons for kids mode -->
		<image name="md_favorite">
			<pos>0.81 0.2</pos>
			<path>./art/icons/favorite.svg</path>
			<maxSize>0.032 0.032</maxSize>
			<origin>0.5 0.5</origin>
			<color>c6d9ec</color>
		</image>
		<image name="md_kidgame">
			<pos>0.84 0.2</pos>
			<path>./art/icons/kid.svg</path>
			<maxSize>0.032 0.032</maxSize>
			<origin>0.5 0.5</origin>
			<color>c6d9ec</color>
		</image>
		<image name="md_hidden">
			<pos>0.87 0.2</pos>
			<path>./art/icons/hidden.svg</path>
			<maxSize>0.032 0.032</maxSize>
			<origin>0.5 0.5</origin>
			<color>c6d9ec</color>
		</image>

		<!-- Description -->
		<text name="md_description">
			<color>c6d9ec</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<fontSize>0.023</fontSize>
			<size>0.53 0.28</size>
			<pos>0.44 0.65</pos>
		</text>

		<!-- Footer -->
		<image name="bottom" extra="true">
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.065</size>
			<path>./art/bottom.png</path>
			<color>1aa3ff33</color>
		</image>
		<helpsystem name="help">
			<textColor>cce6ff</textColor>
			<iconColor>99ccff</iconColor>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<fontSize>0.025</fontSize>
		</helpsystem>

		<!-- hide these fields -->
		<text name="md_lbl_rating, md_rating">
			<pos>1 1</pos>
		</text>
		<text name="md_lbl_publisher, md_publisher">
			<pos>1 1</pos>
		</text>
		<text name="md_lbl_releasedate, md_releasedate">
			<pos>1 1</pos>
		</text>
		<text name="md_lbl_lastplayed, md_lastplayed">
			<pos>1 1</pos>
		</text>
		<text name="md_lbl_playcount, md_playcount">
			<pos>1 1</pos>
		</text>
		<text name="md_lbl_genre">
			<pos>1 1</pos>
		</text>
		<text name="md_lbl_developer, md_developer">
			<pos>1 1</pos>
		</text>
	</view>

</theme>
