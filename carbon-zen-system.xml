<theme>
	<formatVersion>4</formatVersion>

	<view name="system">
		<image name="background" extra="true">
			<path>./art/backgrounds/blue-mountains.jpg</path>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image>

		<image name="ControllerOverlay" extra="true">
			<tile>false</tile>
			<pos>0.5 0.25</pos>
			<origin>0.5 0.5</origin>
			<size>0.2 0</size>
			<color>e6f2ff</color>
		</image>

		<helpsystem name="help">
			<textColor>cce6ff</textColor>
			<iconColor>99ccff</iconColor>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<fontSize>0.025</fontSize>
		</helpsystem>
	</view>

</theme>
