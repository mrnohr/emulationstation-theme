<theme>
	<formatVersion>4</formatVersion>

	<view name="basic">

		<image name="background" extra="true">
			<path>./art/backgrounds/dark-blue.jpg</path>
		</image>

		<textlist name="gamelist">
			<selectedColor>80b3ff</selectedColor>
			<primaryColor>c6d9ec</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<fontSize>0.040</fontSize>
			<pos>0.025 0.18</pos>
			<size>0.950 0.73</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<forceUppercase>1</forceUppercase>
			<scrollSound>./art/sounds/click.wav</scrollSound>
		</textlist>

	</view>

	<view name="basic, detailed">
		<image name="logo">
			<pos>0.266 0.074</pos>
			<maxSize>0.460 0.126</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<image name="logo2" extra="true">
			<pos>0.874 0.074</pos>
			<maxSize>0.460 0.126</maxSize>
			<origin>0.5 0.5</origin>
			<color>bbbbbb</color>
		</image>

		<image name="bottom" extra="true">
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.065</size>
			<path>./art/bottom.png</path>
			<color>1aa3ff33</color>
		</image>

		<image name="top" extra="true">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0.16</size>
			<path>./art/top.png</path>
			<color>1aa3ff33</color>
		</image>

		<helpsystem name="help">
			<textColor>cce6ff</textColor>
			<iconColor>99ccff</iconColor>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<fontSize>0.025</fontSize>
		</helpsystem>
	</view>

</theme>
