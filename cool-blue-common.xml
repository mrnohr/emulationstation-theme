<theme>
	<formatVersion>4</formatVersion>

	<view name="basic, detailed">

		<!-- Background -->
		<image name="background" extra="true">
			<path>./art/backgrounds/dark-blue.jpg</path>
			<size>1 1</size>
		</image>

		<!-- System Logo -->
		<image name="logo">
			<pos>0.18 0.08</pos>
			<maxSize>0.2 0.09</maxSize>
			<origin>0.5 0.5</origin>
		</image>

		<!-- Game List -->
		<textlist name="gamelist">
			<selectedColor>c6d9ec</selectedColor>
			<selectorColor>1aa3ff44</selectorColor>
			<primaryColor>c6d9ec</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<pos>0.021 0.16</pos>
			<size>0.34 0.76</size>
			<alignment>left</alignment>
			<horizontalMargin>0.00</horizontalMargin>
			<fontSize>0.025</fontSize>
			<scrollSound>./art/sounds/click.wav</scrollSound>
		</textlist>

		<!-- Footer -->
		<image name="bottom" extra="true">
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.065</size>
			<path>./art/bottom.png</path>
			<color>1aa3ff33</color>
		</image>
		<helpsystem name="help">
			<textColor>cce6ff</textColor>
			<iconColor>99ccff</iconColor>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<fontSize>0.025</fontSize>
		</helpsystem>

	</view>

</theme>
