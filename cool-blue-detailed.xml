			<color>c6d9ec</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<fontSize>0.023</fontSize>
			<size>0.6 0.3</size>
			<pos>0.39 0.62</pos>
		</text>

	</view>

