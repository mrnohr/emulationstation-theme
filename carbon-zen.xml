<theme>
	<formatVersion>4</formatVersion>

	<view name="system">
		<image name="background" extra="true">
			<path>./art/backgrounds/blue-mountains.jpg</path>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image>

		<image name="ControllerOverlay" extra="true">
			<color>e6f2ff</color>
		</image>

		<helpsystem name="help">
			<textColor>cce6ff</textColor>
			<iconColor>99ccff</iconColor>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<fontSize>0.025</fontSize>
		</helpsystem>
	</view>

	<view name="basic">

		<image name="background" extra="true">
			<path>./art/backgrounds/dark-blue.jpg</path>
		</image>

		<image name="top" extra="true">
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 0.16</size>
			<path>./art/top.png</path>
			<color>1aa3ff33</color>
		</image>

		<textlist name="gamelist">
			<selectedColor>80b3ff</selectedColor>
			<primaryColor>c6d9ec</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<fontSize>0.040</fontSize>
			<pos>0.025 0.18</pos>
			<size>0.950 0.73</size>
			<alignment>center</alignment>
			<horizontalMargin>0.01</horizontalMargin>
			<forceUppercase>1</forceUppercase>
			<scrollSound>./art/sounds/click.wav</scrollSound>
		</textlist>

	</view>

	<view name="detailed">

		<image name="background" extra="true">
			<path>./art/backgrounds/dark-blue.jpg</path>
			<pos>0 0</pos>
			<origin>0 0</origin>
			<size>1 1</size>
		</image>

		<!-- Left Column -->
		<textlist name="gamelist">
			<selectedColor>80b3ff</selectedColor>
			<primaryColor>c6d9ec</primaryColor>
			<secondaryColor>7a6161</secondaryColor>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<pos>0.021 0.165</pos>
			<size>0.489 0.754</size>
			<alignment>left</alignment>
			<horizontalMargin>0.00</horizontalMargin>
			<fontSize>0.03</fontSize>
			<scrollSound>./art/sounds/click.wav</scrollSound>
		</textlist>

		<!-- Cover Art -->

		<image name="md_image">
			<origin>0.5 0.5</origin>
			<pos>0.65 0.33</pos>
		    <maxSize>0.25 0.58</maxSize>
		</image>

		<!-- Metadata -->

		<text name="md_lbl_genre, md_genre, md_lbl_rating, md_lbl_developer, md_developer, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_players, md_players, md_lbl_releasedate">
			<color>c6d9ec</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<fontSize>0.028</fontSize>
		</text>

		<text name="md_genre">
			<pos>0.79 0.44</pos>
			<size>0 0.033</size>
		</text>

		<text name="md_lbl_players, md_players">
			<pos>0.79 0.48</pos>
			<size>0.09 0</size>
		</text>

		<text name="md_players">
			<pos>0.86 0.48</pos>
			<size>0.02 0</size>
		</text>

		<text name="md_lbl_rating, md_lbl_publisher, md_publisher, md_lbl_lastplayed, md_lbl_playcount, md_playcount, md_lbl_releasedate, md_lbl_genre, md_lbl_developer">
			<!-- Hidden? -->
			<pos>1 1</pos>
		</text>

		<!-- Icons for Kids/Kiosk Mode -->
		<image name="md_favorite">
			<pos>0.805 0.55</pos>
			<path>./art/icons/favorite.svg</path>
			<maxSize>0.032 0.032</maxSize>
			<origin>0.5 0.5</origin>
			<color>c6d9ec</color>
		</image>
		<image name="md_kidgame">
			<pos>0.835 0.55</pos>
			<path>./art/icons/kid.svg</path>
			<maxSize>0.032 0.032</maxSize>
			<origin>0.5 0.5</origin>
			<color>c6d9ec</color>
		</image>
		<image name="md_hidden">
			<pos>0.865 0.55</pos>
			<path>./art/icons/hidden.svg</path>
			<maxSize>0.032 0.032</maxSize>
			<origin>0.5 0.5</origin>
			<color>c6d9ec</color>
		</image>

		<!-- Description -->

		<text name="md_description">
			<color>c6d9ec</color>
			<forceUppercase>0</forceUppercase>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<fontSize>0.023</fontSize>
			<pos>0.53 0.64</pos>
		    <size>0.45 0.28</size>
		</text>







	</view>

	<view name="basic, detailed">

		<image name="bottom" extra="true">
			<pos>0 1</pos>
			<origin>0 1</origin>
			<size>1 0.065</size>
			<path>./art/bottom.png</path>
			<color>1aa3ff33</color>
		</image>

		<helpsystem name="help">
			<textColor>cce6ff</textColor>
			<iconColor>99ccff</iconColor>
			<fontPath>./art/fonts/Optima.ttc</fontPath>
			<fontSize>0.025</fontSize>
		</helpsystem>
	</view>


</theme>
